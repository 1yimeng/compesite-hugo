{{- $.Scratch.Set "events" slice -}}
{{- range where .Data.Pages "Params.fragment" "event" -}}
    {{- .Scratch.SetInMap "event" "title" .Title  -}}
    {{- .Scratch.SetInMap "event" "start" (dateFormat "2006-01-02" .Params.start_datetime)  -}}
    {{- .Scratch.SetInMap "event" "allDay" .Params.allday  -}}
    {{- .Scratch.SetInMap "event" "url"  (.Permalink | absURL) -}}
    {{- $.Scratch.Add "events" (.Scratch.Get "event") -}}
{{- end -}}
{{- $.Scratch.Get "events" | jsonify -}}